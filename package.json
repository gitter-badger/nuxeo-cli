{
  "name": "nuxeo-cli",
  "version": "1.0.0",
  "description": "Nuxeo CLI is a command-line interface for helping developers around Nuxeo ecosystem. It provides project bootstrapping, bundles hot reload,...",
  "main": "./bin/nuxeo-cli.js",
  "scripts": {
    "test": "mocha --timeout 5000 -u tdd",
    "coverage": "istanbul cover _mocha",
    "preshrinkwrap": "rm -rf node_modules && npm install",
    "postshrinkwrap": "npm test",
    "preversion": "npm shrinkwrap && git add -f npm-shrinkwrap.json",
    "postversion": "git rm -f npm-shrinkwrap.json && npm version --ignore-scripts --no-git-tag-version patch && git commit -am \"Post release ${npm_package_version}\" && git push && git push --tags"
  },
  "keywords": [
    "nuxeo",
    "cli"
  ],
  "author": "Arnaud Kervern",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.4"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "generator-nuxeo": "*",
    "is-windows": "^1.0.0",
    "lodash": "^4.17.4",
    "log-symbols": "^1.0.2",
    "pad-right": "^0.2.2",
    "semver": "^5.3.0",
    "update-notifier": "^2.1.0",
    "yargs": "^6.6.0",
    "yeoman-environment": "^1.6.6"
  },
  "bin": {
    "nuxeo": "./bin/nuxeo-cli.js"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.15.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "tmp": "0.0.31"
  }
}
